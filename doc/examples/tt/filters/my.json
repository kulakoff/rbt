{
    "name": "My issues",
    "filter": {
        "$or": [
            {
                "assigned": {
                    "$elemMatch": {
                        "$in": "%%my"
                    }
                }
            },
            {
                "author": "%%me"
            }
        ]
    },
    "fields": [
        "subject",
        "status"
    ]
}